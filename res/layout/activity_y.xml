<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.trackapp2.ActivityY">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/p4"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bf1"
        android:layout_marginTop="25dp"
        android:id="@+id/r1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bf2"
        android:layout_marginTop="16dp"
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_alignStart="@+id/r1" />

    <ImageButton
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bf3"
        android:layout_marginTop="16dp"
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_alignStart="@+id/r2" />


    <Button
        android:text="logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/r3"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button3"/>
</RelativeLayout>
